{
    "python.pythonPath": "env/bin/python",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "editor.wordWrapColumn": 120,
    "editor.rulers": [
        0,
        120
    ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.formatOnSave": true,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "env/": true,
        "**/__pycache__/": true,
        "*.egg-info": true
    }
}